{
  "manifest_version": 3,
  "name": "YouTube AdBlock - Coffee Break for YouTube",
  "description": "Coffee Break for YouTube is an ad blocker / skipper built for YouTube.",
  "version": "1.3.1",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png", 
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
    "action": {
      "default_title": "About Coffee Break for YouTube",
      "default_popup": "popup/popup.html"
    },
    "permissions": [
        "storage"
    ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content/adSpeedManager.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
        "service_worker": "background.js"
    }
}
